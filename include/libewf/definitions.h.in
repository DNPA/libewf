#if !defined( _LIBEWF_DEFINIONS_H )
#define _LIBEWF_DEFINIONS_H

#include <libewf/types.h>

#define LIBEWF_VERSION				@VERSION@

/* The libewf version string
 */
#if defined( LIBEWF_WIDE_CHARACTER_TYPE )
#define LIBEWF_VERSION_STRING			L"@VERSION@"
#else
#define LIBEWF_VERSION_STRING			"@VERSION@"
#endif

/* The libewf file access
 * bit 1	set to 1 for read access
 * bit 2	set to 1 for write access
 * bit 3-8	not used
 */
#define LIBEWF_FLAG_READ			(uint8_t) 0x01
#define LIBEWF_FLAG_WRITE			(uint8_t) 0x02

/* The libewf file access macros
 */
#define LIBEWF_OPEN_READ			( LIBEWF_FLAG_READ )
#define LIBEWF_OPEN_WRITE			( LIBEWF_FLAG_WRITE )
#define LIBEWF_OPEN_READ_WRITE			( LIBEWF_FLAG_READ | LIBEWF_FLAG_WRITE )

/* Libewf file formats
 */
#define LIBEWF_FORMAT_UNKNOWN			0x00
#define LIBEWF_FORMAT_ENCASE1			0x01
#define LIBEWF_FORMAT_ENCASE2			0x02
#define LIBEWF_FORMAT_ENCASE3			0x03
#define LIBEWF_FORMAT_ENCASE4			0x04
#define LIBEWF_FORMAT_ENCASE5			0x05
#define LIBEWF_FORMAT_ENCASE6			0x06
#define LIBEWF_FORMAT_SMART			0x0E
#define LIBEWF_FORMAT_FTK			0x0F
#define LIBEWF_FORMAT_LVF			0x10
#define LIBEWF_FORMAT_LINEN5			0x25
#define LIBEWF_FORMAT_LINEN6			0x26

/* The format as specified by Andrew Rosen
 */
#define LIBEWF_FORMAT_EWF			0x70

/* Libewf eXtended EWF format
 */
#define LIBEWF_FORMAT_EWFX			0x71

/* Libewf compression level definitions
 */
#define LIBEWF_COMPRESSION_NONE			0
#define LIBEWF_COMPRESSION_FAST			1
#define LIBEWF_COMPRESSION_BEST			2

/* Libewf media type definitions
 */
#define LIBEWF_MEDIA_TYPE_REMOVABLE		0x00
#define LIBEWF_MEDIA_TYPE_FIXED			0x01

#define LIBEWF_MEDIA_TYPE_CD			0x03

/* Libewf volume type definitions
 */
#define LIBEWF_VOLUME_TYPE_LOGICAL		0x00
#define LIBEWF_VOLUME_TYPE_PHYSICAL		0x01

/* Libwef date representation format
 */
#define LIBEWF_DATE_FORMAT_DAYMONTH		0x01
#define LIBEWF_DATE_FORMAT_MONTHDAY		0x02
#define LIBEWF_DATE_FORMAT_ISO8601		0x03
#define LIBEWF_DATE_FORMAT_CTIME		0x04

/* Libewf compression types
 */
#if defined( LIBEWF_WIDE_CHARACTER_TYPE )
#define LIBEWF_COMPRESSION_TYPE_NONE		L"n"
#define LIBEWF_COMPRESSION_TYPE_FAST		L"f"
#define LIBEWF_COMPRESSION_TYPE_BEST		L"b"
#else
#define LIBEWF_COMPRESSION_TYPE_NONE		"n"
#define LIBEWF_COMPRESSION_TYPE_FAST		"f"
#define LIBEWF_COMPRESSION_TYPE_BEST		"b"
#endif

/* Libewf default segment file size
 */
#define LIBEWF_DEFAULT_SEGMENT_FILE_SIZE	( 1500 * 1024 * 1024 )

/* Libewf segment file type definitions
 */
#define LIBEWF_SEGMENT_FILE_TYPE_DWF		(uint8_t) 'd'
#define LIBEWF_SEGMENT_FILE_TYPE_EWF		(uint8_t) 'E'
#define LIBEWF_SEGMENT_FILE_TYPE_LWF		(uint8_t) 'L'

/* The codepage definitions
 */
#define LIBEWF_CODEPAGE_ASCII				0x41
#define LIBEWF_CODEPAGE_WINDOWS_1250			1250
#define LIBEWF_CODEPAGE_WINDOWS_CENTRAL_EUROPEAN	1250
#define LIBEWF_CODEPAGE_WINDOWS_1251			1251
#define LIBEWF_CODEPAGE_WINDOWS_CYRILLIC		1251
#define LIBEWF_CODEPAGE_WINDOWS_1252			1252
#define LIBEWF_CODEPAGE_WINDOWS_WESTERN_EUROPEAN	1252
#define LIBEWF_CODEPAGE_WINDOWS_1253			1253
#define LIBEWF_CODEPAGE_WINDOWS_GREEK			1253
#define LIBEWF_CODEPAGE_WINDOWS_1254			1254
#define LIBEWF_CODEPAGE_WINDOWS_TURKISH			1254
#define LIBEWF_CODEPAGE_WINDOWS_1255			1255
#define LIBEWF_CODEPAGE_WINDOWS_HEBREW			1255
#define LIBEWF_CODEPAGE_WINDOWS_1256			1256
#define LIBEWF_CODEPAGE_WINDOWS_ARABIC			1256
#define LIBEWF_CODEPAGE_WINDOWS_1257			1257
#define LIBEWF_CODEPAGE_WINDOWS_BALTIC			1257
#define LIBEWF_CODEPAGE_WINDOWS_1258			1258
#define LIBEWF_CODEPAGE_WINDOWS_VIETNAMESE		1258

#endif

