#if SIZEOF_WCHAR_T == 4

/* Byte stream functions
 */
#define libewf_utf_string_size_from_byte_stream( stream, size_stream, codepage, libewf_utf_string_size, error ) \
	libuna_utf32_string_size_from_byte_stream( stream, size_stream, codepage, libewf_utf_string_size, error )

#define libewf_utf_string_copy_from_byte_stream( libewf_utf_string, libewf_utf_string_size, stream, size_stream, codepage, error ) \
	libuna_utf32_string_copy_from_byte_stream( (libuna_utf32_character_t *) libewf_utf_string, libewf_utf_string_size, stream, size_stream, codepage, error )

#define byte_stream_size_from_string( libewf_utf_string, libewf_utf_string_size, codepage, error ) \
	libuna_byte_stream_size_from_utf32( (libuna_utf32_character_t *) libewf_utf_string, libewf_utf_string_size, codepage, error )

